<!DOCTYPE properties PUBLIC "-//JTRS//DTD SCA V2.2.2 PRF//EN" "properties.dtd">
<properties>
  <simple id="filename" mode="readwrite" type="string">
    <description>Name of output binary file.  An additional sri file will be writen with a .sri extension</description>
    <kind kindtype="configure"/>
    <action type="external"/>
  </simple>
  <simple id="write" mode="readwrite" type="boolean">
    <description>Enables (default) or disables writing data out to a file</description>
    <value>True</value>
    <kind kindtype="configure"/>
    <action type="external"/>
  </simple>
  <simple id="overwrite" mode="readwrite" type="boolean">
    <description>If enabled, will cause DataWriter to overwrite [filename] if it already exists. Otherwise DataWriter will generate a non-preexisting name to use (appends to [filename] until an unused name is found)</description>
    <value>False</value>
    <kind kindtype="configure"/>
    <action type="external"/>
  </simple>
  <simple id="endian" mode="readwrite" type="string">
    <description>Set endianness of data in destination file</description>
    <value>little</value>
    <enumerations>
      <enumeration label="little" value="little"/>
      <enumeration label="big" value="big"/>
    </enumerations>
    <kind kindtype="configure"/>
    <action type="external"/>
  </simple>
</properties>
