<!DOCTYPE properties PUBLIC "-//JTRS//DTD SCA V2.2.2 PRF//EN" "properties.dtd">
<properties>
  <simple id="SampleRate" mode="readwrite" type="double">
    <description>Sample rate for output data</description>
    <value>336000.0</value>
    <units>Hz</units>
    <kind kindtype="configure"/>
    <action type="external"/>
  </simple>
  <simple id="StreamID" mode="readwrite" type="string">
    <description>bulkio streamID associated with this data</description>
    <value>dataPlayerStream</value>
    <kind kindtype="configure"/>
    <action type="external"/>
  </simple>
  <simple id="FrontendRF" mode="readwrite" type="long">
    <description>Radio frequency associated with ithis data.  This data is transmitted as a bulkio keyword  </description>
    <value>0</value>
    <units>Hz</units>
    <kind kindtype="configure"/>
    <action type="external"/>
  </simple>
  <simple id="InputFile" mode="readwrite" type="string">
    <description>Path to the binary data to read out</description>
    <value>/the/path/to/my/file</value>
    <kind kindtype="configure"/>
    <action type="external"/>
  </simple>
  <simple id="SpeedFactor" mode="readwrite" type="float">
    <description>Ratio of &quot;real time&quot; to play data out the bulkio port.  
1.0:  real time.  
> 1.0:  faster than real time
&lt; 1.0: slower then real time
&lt; 0: no sleeping - go as fast as possible  </description>
    <value>1.0</value>
    <kind kindtype="configure"/>
    <action type="external"/>
  </simple>
  <simple id="Play" mode="readwrite" type="boolean">
    <description>If play is false data playback is paused.  When play is set to true we resume playback form the same point in the file</description>
    <value>false</value>
    <kind kindtype="configure"/>
    <action type="external"/>
  </simple>
  <simple id="ydelta" mode="readwrite" type="double">
    <description>The ydelta associated with the bulkio SRI.  This is only used for framed data (subsize > 0)</description>
    <value>0.0</value>
    <kind kindtype="configure"/>
    <action type="external"/>
  </simple>
  <simple id="subsize" mode="readwrite" type="long">
    <description>The frame size if the data is framed.  This is used for the bulkio SRI.</description>
    <value>0</value>
    <kind kindtype="configure"/>
    <action type="external"/>
  </simple>
  <simple id="complex" mode="readwrite" type="boolean">
    <description>Flag to indicate data is complex.  If true, data values assumed to be alternating real and complex float values.  </description>
    <value>True</value>
    <kind kindtype="configure"/>
    <action type="external"/>
  </simple>
  <simple id="Loop" mode="readwrite" type="boolean">
    <description>Continue to replay and loop over the input file when we are done or not</description>
    <value>False</value>
    <kind kindtype="execparam"/>
    <action type="external"/>
  </simple>
  <simple id="blocking" mode="readwrite" type="boolean">
    <description>Set the blocking flag in the bulkio sri.  If this is not set to true you risk packet drops if processing can't keep up with data playback rate.</description>
    <value>true</value>
    <kind kindtype="configure"/>
    <action type="external"/>
  </simple>
</properties>
